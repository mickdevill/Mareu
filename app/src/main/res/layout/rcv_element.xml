<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/rcvElement"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FAFAFA"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    xmlns:tools="http://schemas.android.com/tools">

    <com.example.maru.customStaf.Circle
        android:id="@+id/colorCircle"
        android:layout_width="60dp"
        android:layout_height="50dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/mailsInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        tools:text="mails"
        android:maxLines="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/colorCircle" />


    <TextView
        android:id="@+id/DateInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="4dp"
        android:maxLines="1"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="#313131"
        tools:text="date"
        app:layout_constraintBottom_toTopOf="@+id/mailsInfo"
        app:layout_constraintStart_toEndOf="@+id/colorCircle"
        app:layout_constraintTop_toBottomOf="@+id/meetupInfo" />

    <TextView
        android:id="@+id/meetupInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="16dp"
        android:textColor="#313131"
        android:textSize="@dimen/textSizeForDescription"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/mailsInfo"
        app:layout_constraintStart_toEndOf="@+id/colorCircle"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="meetupInfo" />

    <ImageButton
        android:id="@+id/remouve"
        android:layout_width="39dp"
        android:layout_height="44dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:background="#FAFAFA"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_delete" />


</androidx.constraintlayout.widget.ConstraintLayout>